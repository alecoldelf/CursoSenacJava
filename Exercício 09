    import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner (System.in);
		
		int n1 = 0;
		
		int n2 = 0;
		
		System.out.println("Qual o salário atual do funcionário? (Por mês) ");
		n1 = sc.nextInt();
		
		System.out.println("Qual o percentual e reajuste necessário? ");
		n2 = sc.nextInt();
		
		int n3 = n2*100;
		
		int n4 = (n1+n3)/12;
		
		System.out.println("O Salário atual do Funcionário será de mais " + n4 + " Ou seja, " + (n1+n4));
	}
}
