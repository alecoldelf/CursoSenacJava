package cap8;

import java.util.*;

public class Ex31 {
	public static void main(String[] args) {
	
		Scanner sc = new Scanner (System.in);
	
		int x = 0;
	
		int y = 0;
	
		int z = 0;
	
		System.out.println("Digite o número do primeiro lado: ");
		x = sc.nextInt();
		
		System.out.println("Digite o número do segundo lado: ");
		y = sc.nextInt();
	
		System.out.println("Digite o número do terceiro lado: ");
		z = sc.nextInt();
	
		if (x+z>y) {
			System.out.println("Estes lados formam um triângulo");
		}
	
		else if (x+y>z) {
			System.out.println("Estes lados formam um triângulo");
		}
	
		else if (y+z>x) {
			System.out.println("Estes lados formam um triângulo");
		}
		
		else {
			System.out.println("Estes lados não formam um triângulo");
		}
	}
}
