package cap8e9;

import java.util.*;

public class Ex16{
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		float x = 0;
		
		System.out.println("Quantas maçãs você comprou?");
		x = sc.nextInt();
		
		if (x>=12) {
		    System.out.println("Suas maçãs vão custar R$" + x + " reais");
		}
		
		else {
		    System.out.println("Suas maçãs vão custar R$" + (x*1.30) + " reais");
		}
	}
}
